<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10px"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_grabbill_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imgview_icon_usericon" />

        <LinearLayout
            android:layout_width="@dimen/margin_270px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_grabbill_name"
                style="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王大妈"
                android:maxLength="10"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/tv_garbbill_des"
                style="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="铝合金门5百元收一个"
                android:maxLength="10"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/tv_garbbill_price"
                style="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成交金额：500元"
                android:textSize="12sp" 
                android:visibility="gone"/>
            
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10px"
            android:layout_marginTop="2dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_grabbill_distance"
                style="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距离: 2公里"
                android:layout_marginBottom="8dp"
                android:textSize="15sp" 
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_grabbill_time"
                style="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014-09-21"
                android:textSize="12sp" 
                />
            <TextView
                android:id="@+id/tv_grabbill_btn" 	
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="抢单"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/grabbill_bng"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_grabbill_state" 	
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已完结"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/red"
                />
    	</LinearLayout>
    </LinearLayout>

</LinearLayout>