<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/topic_message_others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                <TextView
                    android:id="@+id/topic_message_others_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/sendmessageimg1"
                    android:layout_toRightOf="@+id/topic_message_others_name"
                    android:layout_marginRight="60dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:text="是么？"
                    android:textColor="#0000ff" 
                    android:textSize="@dimen/textsize_20" />

                <TextView
                    android:id="@+id/topic_message_others_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/topic_message_others_message"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:text="李四 "
                    android:textColor="#f00"
                    android:textSize="@dimen/textsize_20"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/topic_message_mime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                >
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                <TextView
                    android:id="@+id/topic_message_mime_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/sendmessageimg2"
                    android:layout_toLeftOf="@+id/topic_message_mime_name"
                    android:layout_marginLeft="60dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="10dp"
                    android:text="是么？"
                    android:textColor="#0000ff" 
                    android:textSize="@dimen/textsize_20"/>
                <TextView
                    android:id="@+id/topic_message_mime_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:text="王五"
                    android:textColor="#f00"
                    android:textSize="@dimen/textsize_20"/>

                </RelativeLayout>
            </LinearLayout>

</LinearLayout>