<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/topic_message_others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/topic_message_others_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="李四:"
                    android:textColor="@color/bg_red"
                    android:textSize="@dimen/textsize_20" />

                <TextView
                    android:id="@+id/topic_message_others_message"
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="0.00"
                    android:background="@drawable/conf_virtu_bg2"
                    android:gravity="top"
                    android:padding="15dp"
                    android:text="是么？"
                    android:textColor="#0000ff" 
                    android:textSize="@dimen/textsize_20"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/topic_message_mime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" 
                >

                <TextView
                    android:id="@+id/topic_message_mime_message"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="5dp"
                    android:background="@drawable/conf_virtu_bg2"
                    android:gravity="top"
                    android:padding="15dp"
                    android:text="是么？"
                    android:textColor="#020305" 
                    android:textSize="@dimen/textsize_20"/>

            </LinearLayout>

</LinearLayout>