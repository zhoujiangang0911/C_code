<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/lv_joinmember_waitto"
        android:layout_width="match_parent"
       	android:layout_height="0dip"
        android:background="@drawable/et_login_login_bg"
        android:layout_weight="1.0" >
    </ListView>

    <View
        android:layout_width="match_parent"
       	android:layout_height="0dip"
       	android:layout_weight="0.01"
        />

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
    <ImageButton
        android:id="@+id/ibtn_select_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16"
	        android:background="@drawable/btn_sel"
	         android:layout_weight="1.0"
        android:contentDescription="@null" />
    
    <ImageButton
        android:id="@+id/ibtn_addto"
	        android:layout_margin="@dimen/margin_16"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/btn_addto_hassel"
	        android:layout_weight="1.0"
        android:contentDescription="@null" />
    </LinearLayout>

</LinearLayout>